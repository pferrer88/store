<p>
  <%= f.label :user_name, t(:name) %><br />
  <%= f.text_field :user_name, :class => 'title' %>
</p>
<p>
  <%= f.label :user_lastname, t(:last_name) %><br />
  <%= f.text_field :user_lastname, :class => 'title' %>
</p>
<p>
  <%= f.label :email, t(:email) %><br />
  <%= f.email_field :email, :class => 'title' %>
</p>

<p>
  <%= f.label :company_name, t(:company_name) %><br />
  <%= f.text_field :company_name, :class => 'title' %>
</p>

<p>
  <%= f.label :phone, t(:phone) %><br />
  <%= f.text_field :phone, :class => 'title' %>
</p>

<p>
  <%= f.label :address, t(:address) %><br />
  <%= f.text_field :address, :class => 'title', :rows => 2 %>
</p>
<div id="password-credentials">
  <p>
    <%= f.label :password, t(:password) %><br />
    <%= f.password_field :password, :class => 'title' %>
  </p>

  <p>
    <%= f.label :password_confirmation, t(:confirm_password) %><br />
    <%= f.password_field :password_confirmation, :class => 'title' %>
  </p>
</div>

<div data-hook="signup_below_password_fields"></div>
